<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	
	<persistence-unit name="EXAMPLE">
		<jta-data-source>java:jboss/datasources/ExampleDS</jta-data-source>
		<class>com.fjcasasaltas.training.jee.jpa.domain.CustCustomer</class>
		<class>com.fjcasasaltas.training.jee.jpa.domain.SecUser</class>
		<class>com.fjcasasaltas.training.jee.jpa.domain.SysLanguage</class>
		<class>com.fjcasasaltas.training.jee.jpa.domain.SysLanguageLang</class>
		<class>com.fjcasasaltas.training.jee.jpa.domain.SysPerson</class>
		<class>com.fjcasasaltas.training.jee.jpa.domain.SysPersonData</class>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect" /> 
			<property name="hibernate.format_sql" value="false" />
			<property name="hibernate.generate_statistics" value="false" />
			<property name="hibernate.hbm2ddl.auto" value="create-drop" />
			<property name="hibernate.hbm2ddl.import_files" value="initial_data.sql" />
			<property name="hibernate.show_sql" value="false" />
		</properties>
	</persistence-unit>

</persistence>